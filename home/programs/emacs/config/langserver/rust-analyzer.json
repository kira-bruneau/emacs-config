{
  "name": "rust-analyzer",
  "languageId": "rust",
  "command": ["rust-analyzer"],
  "settings": {},
  "capabilities": {
    "textDocument": {
      "hover": {
        "contentFormat": ["markdown"]
      }
    }
  },
  "initializationOptions": {
    "cachePriming": {
      "enable": false
    },
    "cargo": {
      "features": "all",
      "buildScripts": {
        "rebuildOnSave": false,
        "invocationStrategy": "once"
      }
    },
    "checkOnSave": false,
    "check": {
      "allTargets": true,
      "features": "all",
      "invocationStrategy": "once"
    },
    "completion": {
      "postfix": {
        "enable": false
      }
    }
  }
}
