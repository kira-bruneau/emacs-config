# git config include.path ../.gitconfig
[remote "gitlab"]
	url = https://gitlab.com/kira-bruneau/home-config.git
	fetch = +refs/heads/*:refs/remotes/gitlab/*
	fetch = +refs/merge-requests/*/head:refs/pullreqs/*
[remote "github"]
	url = https://github.com/kira-bruneau/home-config.git
	fetch = +refs/heads/*:refs/remotes/github/*
[remote "all"]
	url = https://gitlab.com/kira-bruneau/home-config.git
	fetch = +refs/heads/*:refs/remotes/all/*
	pushurl = git@gitlab.com:kira-bruneau/home-config.git
	pushurl = git@github.com:kira-bruneau/home-config.git
[remote]
	pushDefault = all
